<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_albumix_plus_integralmedica_1kg" />

        <TextView
            android:id="@+id/tv_nome_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_item"
            android:text="ALBUMIX plus integraLmÃ©dica 1kg"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_preco_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nome_item"
            android:layout_toRightOf="@id/iv_item"
            android:text="R$ 90,54"
            android:textColor="@color/colorAccent"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_qtd"
            android:text="Quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@id/tv_preco_item"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/ib_menos1"/>

        <TextView
            android:id="@+id/tv_qtd_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_qtd"
            android:layout_centerHorizontal="true"
            android:text="100"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/ib_mais1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_preco_item"
            android:layout_toRightOf="@id/tv_qtd"
            android:background="@mipmap/ic_mais1" />

        <ImageButton
            android:id="@+id/ib_menos1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item"
            android:layout_below="@id/tv_preco_item"
            android:background="@mipmap/ic_menos1" />
    </RelativeLayout>

</LinearLayout>