<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bt_circle"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_albumix_plus_integralmedica_1kg" />

        <TextView
            android:id="@+id/tv_nome_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item"
            android:layout_toEndOf="@+id/iv_item"
            android:text="ALBUMIX plus integraLmÃ©dica 1kg"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_preco_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nome_item"
            android:layout_toEndOf="@+id/iv_item"
            android:text="10x de R$ 9,54"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ib_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/ic_cart" />
    </RelativeLayout>

</LinearLayout>